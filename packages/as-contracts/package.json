{
  "name": "@substrate/as-contracts",
  "version": "0.0.1",
  "description": "Write smart contracts for substrate in AssemblyScript",
  "author": "Stefanie Doll",
  "license": "Apache-2.0",
  "ascMain": "assembly/index.ts",
  "scripts": {
    "build:optimized": "asc assembly/index.ts -b build/contract.wasm -t build/contract.wat --importMemory --noAssert --use abort=  --sourceMap --validate --optimize",
    "build:tsd": "asc assembly/index.ts -d build/index.d.ts",
    "build": "yarn build:tsd && yarn build:optimized",
    "test": "asp"
  },
  "dependencies": {
    "@assemblyscript/loader": "^0.10.1"
  },
  "devDependencies": {
    "@substrate/as-types": "0.0.1",
    "@substrate/as-utils": "0.0.1",
    "@as-pect/cli": "^4.0.0",
    "as-bignum": "^0.2.2",
    "assemblyscript": "0.12.3"
  },
  "releaseFiles": [
    "assembly/",
    "README.md",
    "LICENSE"
  ]
}
